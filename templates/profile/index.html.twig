{% extends 'base.html.twig' %}

{% block title %}Your Profile
{% endblock %}

{% block body %}


	<h1 class="text-3xl font-bold underline">
		Your profile
	</h1>

	<p>User Email :
		{{app.user.email}}
	</p>

<section class=" bg-slate-100">

	<div class="container px-6 py-10 mx-auto">
		<h1 class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-black">My Posts</h1>

		<div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">

			{% for post in listmyposts %}
				<div class="lg:flex">
					<img class="object-cover w-full h-56 rounded-lg lg:w-64" src="{{asset('uploads/' ~ post.image)}}" alt="">


					<div class="flex flex-col justify-between py-6 lg:mx-6">
						<p class="text-xl font-semibold text-gray-800 hover:underline dark:text-gray-800 "></p>

						{{ post.text }}
					</p>
					<span class="text-sm text-gray-950 dark:text-gray-950">On:
						{{post.date|date('d-m-Y') }}</span>

					<span class="text-sm text-gray-950 dark:text-gray-950">Brand:
						{{ post.car.brand }}</span>

				</div>
			</div>
		{% endfor %}
	</div>
</div></section>

{% endblock %}

